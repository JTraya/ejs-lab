
<%- include('./partials/nav') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <h1>Full Menu</h1>
  <ul>
    <h2>Mains</h2>
    <% menu.forEach((item) => { %>
        <% if (item.category === 'mains') { %>
        <li><%= item.name%>:</li>
            <ul>
                <li>$<%= item.price %></li>
                <li>Rating:<%= item.rating %></li>
                <li style="list-style:none"><%= item.details %></li>
            </ul>
            <% } %>
    <% }); %>
    <h2>Sides</h2>
    <% menu.forEach((item) => { %>
        <% if (item.category === 'sides') { %>
        <li><%= item.name%>:</li>
            <ul>
                <li>$<%= item.price %></li>
                <li>Rating:<%= item.rating %></li>
                <li style="list-style:none"><%= item.details %></li>
            </ul>
            <% } %>
    <% }); %>
    <h2>Desserts</h2>
    <% menu.forEach((item) => { %>
        <% if (item.category === 'desserts') { %>
        <li><%= item.name%>:</li>
            <ul>
                <li>$<%= item.price %></li>
                <li>Rating:<%= item.rating %></li>
                <li style="list-style:none"><%= item.details %></li>
            </ul>
            <% } %>
    <% }); %>
  </ul>
</body>
</html>
